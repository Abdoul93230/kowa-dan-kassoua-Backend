# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/kowa-dan-kassoua
# Pour MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/kowa-dan-kassoua

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_change_this
JWT_REFRESH_EXPIRE=30d

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Google Vision API
GOOGLE_VISION_API_KEY=your_google_vision_api_key
GOOGLE_APPLICATION_CREDENTIALS=./config/google-credentials.json

# SMS API (Ã  configurer selon le fournisseur)
SMS_API_KEY=your_sms_api_key
SMS_API_URL=https://api.sms-provider.com

# Frontend URL (CORS)
FRONTEND_URL=http://localhost:3000
MOBILE_APP_SCHEME=kowadankassoua://

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
